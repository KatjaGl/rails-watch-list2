<div class= "container">
  <div class = "row">
    <div class="col-sm-6">
      <h3>Add a movie to your <%= @list.name %> list</h3>
    </div>
    <div class = "col-sm-6 col-lg-8">
      <%= simple_form_for([@list, @bookmark]) do |f| %>
        <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
        <%= f.association :movie, prompt: 'Select a movie', input_html: { data: { controller: 'select' } } %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
  <div class = "col-sm-6 btn">
    <%= link_to "bach to list", list_path(@list) %>
  </div>
</div>
