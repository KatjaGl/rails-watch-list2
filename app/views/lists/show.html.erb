<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
    <h1><%= @list.name %></h1>
  </div>
    <span class="movie-tag"><%= pluralize(@list.movies.size, 'movie') %></span>
</div>
<div class= "container">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        add a movie
      </button>
      <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>
  <div class = "row">
    <ul class = "col-sm-6 card list-group">
      <% @list.bookmarks.each do |bookmark|%>
        <li class = "list-group-item">
          <strong><%= bookmark.movie.title %></strong>
        </li>
        <li class = "list-group-item">
          <strong><%= bookmark.movie.overview %></strong>
        </li>
        <li class = "list-group-item">
          <strong><%= bookmark.comment %></strong>
        </li>
        <li class = "list-group-item">
          <%= link_to "Delete this bookmark", bookmark_path(bookmark),
          method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } %>
        </li>
        <li class = "list-group-item">
          <%= link_to "Update this bookmark", edit_bookmark_path %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="row">
    <div class = "col-sm-6 btn btn-success">
      <%= link_to 'add a new bookmark', new_list_bookmark_path(@list) %>
    </div>
  </div>
  <div class="row">
    <div class = "col-sm-6 btn btn-primary">
      <%= link_to 'back to index', list_path %>
    </div>
  </div>
</div>
